<?xml version='1.0' encoding='utf-8'?>
<widget id="beecounter.herokuapp.com" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Bee Counter</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="michele@daudr.me" href="http://www.daudr.me">
        Dau√∞r - Michele Da Rin
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="~1.3.0" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.0" />

    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false"/>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/android/img/beehive36.png" />
        <icon density="mdpi" src="res/android/img/beehive48.png" />
        <icon density="hdpi" src="res/android/img/beehive72.png" />
        <icon density="xhdpi" src="res/android/img/beehive96.png" />
        <splash density="land-hdpi" src="res/android/img/beehive72.png" />
        <splash density="land-ldpi" src="res/android/img/beehive36.png" />
        <splash density="land-mdpi" src="res/android/img/beehive48.png" />
        <splash density="land-xhdpi" src="res/android/img/beehive96.png" />
        <splash density="port-hdpi" src="res/android/img/beehive72.png" />
        <splash density="port-ldpi" src="res/android/img/beehive36.png" />
        <splash density="port-mdpi" src="res/android/img/beehive48.png" />
        <splash density="port-xhdpi" src="res/android/img/beehive96.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <!-- Build and prepare the Angular 2 application. -->
    <hook type="before_prepare" src="hooks/prepare.js"/>
</widget>
